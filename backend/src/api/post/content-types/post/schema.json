{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "singularName": "post",
    "pluralName": "posts",
    "displayName": "Post"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "post_id": {
      "type": "uid"
    },
    "description": {
      "type": "text"
    },
    "fecha_creacion": {
      "type": "datetime"
    },
    "fecha_update": {
      "type": "datetime"
    },
    "users_permissions_user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "post"
    },
    "evidences": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "comments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comment.comment",
      "mappedBy": "post"
    },
    "like": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::like.like",
      "mappedBy": "post"
    },
    "likes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::like.like"
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category",
      "mappedBy": "post"
    }
  }
}
